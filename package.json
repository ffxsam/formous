{
  "name": "formous",
  "version": "0.8.1",
  "description": "Simple and elegant form-handling for React",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run lint && flow && npm test && npm run build:babel",
    "build:babel": "babel ./src --out-dir ./lib --no-comments",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src",
    "test": "mocha tests/.setup.js tests/**/*-tests.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ffxsam/formous.git"
  },
  "keywords": [
    "react",
    "react-component",
    "form",
    "form-validation",
    "forms",
    "validation"
  ],
  "author": "Sam Hulick",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ffxsam/formous/issues"
  },
  "homepage": "https://github.com/ffxsam/formous#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.0",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "eslint": "^3.0.0",
    "eslint-plugin-flowtype": "^2.3.0",
    "eslint-plugin-react": "^5.2.2",
    "flow-bin": "^0.27.0",
    "jsdom": "^9.4.1",
    "mocha": "^2.5.3",
    "react": "^15.2.0",
    "react-dom": "^15.2.0"
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "invariant": "^2.2.1",
    "meteor-react-prebind": "^1.0.2",
    "warning": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^15.0.0",
    "react-dom": "^15.0.0"
  }
}
